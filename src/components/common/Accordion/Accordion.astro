---
import Icon from '../Icon';

interface Item {
	title: string;
	content: string;
}

export interface Props {
	items: Item[];
}

const { items } = Astro.props;
---

<section class="divide-y divide-secondary/50 w-full">
	{
		items.map((item, i) => (
			<div class="w-full">
				<input
					type="radio"
					name="accordion"
					id={`accordion-${i}`}
					class="peer hidden"
					checked={i === 0}
				/>

				<label
					for={`accordion-${i}`}
					class="flex items-start justify-between cursor-pointer py-6 w-full"
				>
					<h3 class="text-lg font-semibold text-secondary">
						{i + 1}. {item.title}
					</h3>
					<Icon color="secondary" name="chevron-down" />
				</label>

				<p class="mt-0 text-secondary opacity-0 max-h-0 overflow-hidden transition-all duration-300 ease-out peer-checked:opacity-100 peer-checked:mb-4 peer-checked:max-h-screen">
					{item.content}
				</p>
			</div>
		))
	}
</section>
