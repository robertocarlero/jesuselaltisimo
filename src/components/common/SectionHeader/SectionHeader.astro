---
import { TEXT_COLORS_CLASSES } from '@/constants/theme';

import type { Colors } from '@/constants/types';

type Props = {
	title: string;
	description: string;
	color?: Colors;
};

const { title, description, color = 'primary' } = Astro.props;

const textColor = TEXT_COLORS_CLASSES[color];
---

<div class="w-full max-w-5xl flex flex-col items-center mb-12 lg:mb-24 gap-5">
	<h2
		class:list={[
			'text-2xl md:text-3xl lg:text-4xl font-bold text-center',
			textColor,
		]}
	>
		{title}
	</h2>
	<h3 class:list={['md:text-xl font-light text-center', textColor]}>
		{description}
	</h3>
</div>
